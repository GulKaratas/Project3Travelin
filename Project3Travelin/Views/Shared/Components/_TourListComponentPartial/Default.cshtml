@model PaginatedTourResultDto

<section class="trending pt-6 pb-0 bg-lgrey">
    <div class="container">
        <div class="list-results d-flex align-items-center justify-content-between">
            <div class="list-results-sort">
                <p class="m-0">Showing @((Model.CurrentPage - 1) * Model.PageSize + 1)-@(Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount)) of @Model.TotalCount results</p>
            </div>
            <div class="click-menu d-flex align-items-center justify-content-between">
                <div class="change-list f-active me-2"><a href="tour-list.html"><i class="fa fa-bars rounded"></i></a></div>
                <div class="change-grid me-2"><a href="tour-grid.html"><i class="fa fa-th rounded"></i></a></div>
                <div class="sortby d-flex align-items-center justify-content-between ml-2">
                    <select class="niceSelect">
                        <option value="1">Sort By</option>
                        <option value="2">Average rating</option>
                        <option value="3">Price: low to high</option>
                        <option value="4">Price: high to low</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="destination-list">
            @foreach(var item in Model.Tours)
            {
                <div class="trend-full bg-white rounded box-shadow overflow-hidden p-4 mb-4">
                    <div class="row">
                        <div class="col-lg-4 col-md-3">
                            <div class="trend-item2 rounded">
                                <a href="tour-single.html" style="background-image: url(@item.ImageUrl);"></a>
                                <div class="color-overlay"></div>
                            </div>
                        </div>
                        <div class="col-lg-5 col-md-6">
                            <div class="trend-content position-relative text-md-start text-center">
                                <small>@item.DayNight</small>
                                <h3 class="mb-1"><a href="tour-single.html">@item.Title</a></h3>
                                <h6 class="theme mb-0"><i class="icon-location-pin"></i> @item.Country</h6>
                                <p class="mt-4 mb-0">@item.Description <br><a href="#"><span class="theme">Ücretsiz İptal</span></a></p>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-3">
                            <div class="trend-content text-md-end text-center">
                                <div class="rating">
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                </div>
                                <small>200 Reviews</small>
                                <div class="trend-price my-2">
                                    <span class="mb-0">From</span>
                                    <h3 class="mb-0">$125</h3>
                                    <small>Per Adult</small>
                                </div>
                                <a href="tour-single.html" class="nir-btn">View Detail</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
         

            <div class="pagination-wrapper mt-5 mb-5 pb-4">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        @if (Model.HasPrevious)
                        {
                            <li class="page-item">
                                <a class="page-link prev-next" href="?page=@(Model.CurrentPage - 1)">
                                    <i class="fa fa-arrow-left"></i>
                                </a>
                            </li>
                        }

                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item">
                                <a class="page-link @(i == Model.CurrentPage ? "active" : "")" href="?page=@i">@i</a>
                            </li>
                        }

                        @if (Model.HasNext)
                        {
                            <li class="page-item">
                                <a class="page-link prev-next" href="?page=@(Model.CurrentPage + 1)">
                                    <i class="fa fa-arrow-right"></i>
                                </a>
                            </li>

                <style>
                    .page-link:hover {
                        background-color: #48119b !important;
                        border-color: #48119b !important;
                        color: white !important;
                        transform: translateY(-2px);
                    }
                    .page-link.active-page {
                        box-shadow: 0 4px 8px rgba(44, 39, 109, 0.3) !important;
                    }
                    .pagination {
                        gap: 5px;
                    }
                </style>
                        }
                    </ul>
                </nav>
            </div>

            <style>
                .pagination-wrapper .pagination {
                    gap: 8px;
                }
                
                .pagination-wrapper .page-link {
                    min-width: 42px;
                    height: 42px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    border: 2px solid #e9ecef;
                    border-radius: 8px;
                    color: #495057;
                    font-weight: 600;
                    font-size: 15px;
                    transition: all 0.3s ease;
                    background: white;
                    margin: 0;
                    padding: 0 12px;
                }
                
                .pagination-wrapper .page-link:hover {
                    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                    border-color: #667eea;
                    color: white;
                    transform: translateY(-3px);
                    box-shadow: 0 8px 20px rgba(102, 126, 234, 0.35);
                }
                
                .pagination-wrapper .page-link.active {
                    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                    border-color: #667eea;
                    color: white;
                    box-shadow: 0 6px 16px rgba(102, 126, 234, 0.4);
                    transform: translateY(-2px);
                }
                
                .pagination-wrapper .page-link.prev-next {
                    width: 42px;
                    padding: 0;
                }
                
                .pagination-wrapper .page-link.prev-next:hover {
                    background: linear-gradient(135deg, #f093fb 0%, #48119b 100%);
                    border-color: #f093fb;
                }
            </style>
        </div>
    </div>
</section>